{
  "compilerOptions": {
    "target": "ES2019",
    "module": "none",
    "lib": ["es2019"],
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "dist",
    "types": ["google-apps-script"],
    "skipLibCheck": true,
    "resolveJsonModule": false,
    "allowJs": false,
    "noEmitOnError": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
